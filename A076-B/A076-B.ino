#include <ESP32Servo.h>

//-------------------------------------------------------------------
#define PIN_PWM  2

//-------------------------------------------------------------------
Servo servo1;

//-------------------------------------------------------------------
void setup(void)
{
  servo1.attach(PIN_PWM);
}

//-------------------------------------------------------------------
void loop(void)
{
  servo1.write(0);
  delay(2000);

  servo1.write(180);
  delay(2000);
}
